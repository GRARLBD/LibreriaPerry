<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.mycompany.libreria.gral.system.model.Inventario" table="Inventario">
    
        <id name="id" type="java.lang.Integer">
            <column name="id_inventario"/>
            <generator class="increment"/>
        </id>
        
        <many-to-one 
            cascade="all" class="com.mycompany.libreria.gral.system.model.Producto" 
            column="id_producto" lazy="false" name="producto">
        </many-to-one>
        
        <bag cascade="all" lazy="false" name="lOferta">
            <key column="id_inventario" not-null="true"/>
            <one-to-many class="com.mycompany.libreria.gral.system.model.Oferta"/>
        </bag>
        
        <property name="costoUnitario" type="java.math.BigDecimal">
            <column name="costo_unitario"/>
        </property>
        
        <property name="totalCosto" type="java.math.BigDecimal">
            <column name="total_costo"/>
        </property>
        
        <property name="acumEntrada" type="java.lang.Integer">
            <column name="acum_entrada"/>
        </property>
        
        <property name="acumSalida" type="java.lang.Integer">
            <column name="acum_salida"/>
        </property>
        
        <property name="estado" type="boolean">
            <column name="estado"/>
        </property>
        
        <property name="unidOf" type="int">
            <column name="unid_of"/>
        </property>
        
        <property name="pVenta" type="java.math.BigDecimal">
            <column name="p_venta"/>
        </property>
        
        <property name="totalVenta" type="java.math.BigDecimal">
            <column name="total_venta"/>
        </property>
        
        <property name="totalGanancia" type="java.math.BigDecimal">
            <column name="total_ganancia"/>
        </property>      
        
    </class>
</hibernate-mapping>
